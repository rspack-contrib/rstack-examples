{
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/dist-types": true,
    "**/coverage": true,
    "**/compiled": true,
    "**/doc_build": true,
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.exclude": {
    "**/.DS_Store": true
  },
  "editor.defaultFormatter": "biomejs.biome",
  "mdx.validate.validateFileLinks": "ignore",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
